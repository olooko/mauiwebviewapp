<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pr="clr-namespace:MPowerKit.ProgressRing;assembly=MPowerKit.ProgressRing"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewModels="clr-namespace:MauiWebViewApp.ViewModels" 
             x:DataType="viewModels:SplashPageViewModel"
             x:Class="MauiWebViewApp.Views.SplashPage">
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior EventName="Loaded" Command="{Binding UpdateCommand}" />
    </ContentPage.Behaviors>    
    <Grid>
        <pr:ProgressRing HeightRequest="100" WidthRequest="100" Progress="{Binding ProgressValue}" IsIndeterminate="False" Smooth="True" StrokeLineCap="Square" Color="Red" Thickness="7" />
    </Grid>
</ContentPage>